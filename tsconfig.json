{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./dist",               // Output directory for compiled files
    "rootDir": "./src",               // Source directory
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*","dist/**/*"],
  "exclude": ["node_modules"]
}
